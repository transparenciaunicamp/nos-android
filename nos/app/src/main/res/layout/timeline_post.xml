<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" android:background="#ffffff">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#12d335"/>
    <TextView
        android:id="@+id/name"
        android:text="NOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_picture"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/profile_picture"/>
    <TextView
        android:id="@+id/timestamp"
        android:text="TIMESTAMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/profile_picture"/>
    <TextView
        android:id="@+id/message"
        android:text="MESSAGE HERE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_picture"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"/>
    <View
        android:id="@+id/attachment"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/message"/>


</RelativeLayout>